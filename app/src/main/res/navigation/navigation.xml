<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.delafleur.mxt.ui.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_scoreFragment"
            app:destination="@id/scoreFragment" />
    </fragment>

    <fragment
        android:id="@+id/scoreFragment"
        android:name="com.delafleur.mxt.ui.ScoreFragment"
        android:label="fragment_score"
        tools:layout="@layout/fragment_score" >
        <action
            android:id="@+id/action_scoreFragment_to_summaryPageFragment"
            app:destination="@id/summaryPageFragment" />
        <action
            android:id="@+id/action_scoreFragment_to_cameracaptureFragment"
            app:destination="@id/cameracaptureFragment" />
    </fragment>
    <fragment
        android:id="@+id/summaryPageFragment"
        android:name="com.delafleur.mxt.ui.SummaryPageFragment"
        android:label="fragment_summary_page"
        tools:layout="@layout/fragment_summary_page" >
        <action
            android:id="@+id/action_summaryPageFragment_to_scoreFragment"
            app:destination="@id/scoreFragment" />
    </fragment>
    <fragment
        android:id="@+id/cameracaptureFragment"
        android:name="com.delafleur.mxt.ui.CameracaptureFragment"
        android:label="CameracaptureFragment" >
        <action
            android:id="@+id/action_cameracaptureFragment_to_scoreFragment"
            app:destination="@id/scoreFragment" />
    </fragment>
</navigation>